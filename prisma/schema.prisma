  cacheEnabled    Boolean  @default(true) @map("cache_enabled")
  cacheTtl        Int      @default(3600) @map("cache_ttl") // seconds
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  @@index([region])
  @@index([isActive])
  @@map("widgets")
}

// ============================================
// HOOKS/EVENTS SYSTEM
// ============================================

model Hook {
  id              String   @id @default(uuid()) @db.Uuid
  name            String   @unique @db.VarChar(100) // article.beforeSave, user.afterLogin
  description     String?  @db.Text
  isSystem        Boolean  @default(false) @map("is_system")
  
  createdAt       DateTime @default(now()) @map("created_at")
  
  listeners       HookListener[]
  
  @@map("hooks")
}

model HookListener {
  id              String   @id @default(uuid()) @db.Uuid
  hookId          String   @map("hook_id") @db.Uuid
  moduleSlug      String   @map("module_slug") @db.VarChar(100)
  handler         String   @db.VarChar(200) // Module handler function
  priority        Int      @default(10)
  isEnabled       Boolean  @default(true) @map("is_enabled")
  
  createdAt       DateTime @default(now()) @map("created_at")
  
  hook            Hook     @relation(fields: [hookId], references: [id], onDelete: Cascade)
  
  @@unique([hookId, moduleSlug])
  @@index([hookId])
  @@index([priority])
  @@map("hook_listeners")
}

// ============================================
// BREAKING NEWS (Enhanced)
// ============================================

model BreakingNews {
  id              String   @id @default(uuid()) @db.Uuid
  title           String   @db.VarChar(500)
  titleAr         String?  @map("title_ar") @db.VarChar(500)
  titleEn         String?  @map("title_en") @db.VarChar(500)
  titleFr         String?  @map("title_fr") @db.VarChar(500)
  
  // Link
  url             String?  @db.VarChar(1000)
  articleId       String?  @map("article_id") @db.Uuid
  
  // Display
  priority        Int      @default(0)
  style           String   @default("ticker") @db.VarChar(50) // ticker, banner, popup
  backgroundColor String?  @map("background_color") @db.VarChar(20)
  textColor       String?  @map("text_color") @db.VarChar(20)
  
  // Status
  isActive        Boolean  @default(true) @map("is_active")
  startsAt        DateTime? @map("starts_at")
  expiresAt       DateTime? @map("expires_at")
  
  // Targeting
  languages       String[] // Target languages
  
  createdById     String   @map("created_by_id") @db.Uuid
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  @@index([isActive])
  @@index([priority])
  @@index([expiresAt])
  @@map("breaking_news")
}
